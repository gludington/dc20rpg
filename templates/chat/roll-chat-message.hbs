<div class="chat-roll-card" style="display: block;">
  <header>
    <img class="chat-img" src="{{image}}"/>
    <div class="chat-title show-hide-description">
      <a>{{rollTitle}}</a>
    </div>
  </header>
  {{#if against}} 
    <div class="sublabel">
      {{#ifCond winTotal '>=' against}}
      <label style="color: #057514;">(Succeed vs {{against}})</label>
      {{else}}
      <label style="color: #800404;">(Failed vs {{against}})</label>
      {{/ifCond}}
    </div> 
  {{/if}}
  <div class="chat-description 
  {{#if (arrayIncludes actionType arrayString='dynamic attack save other check contest')}} hidden {{/if}}">
    {{{description}}}
  </div>
  {{#if (arrayIncludes actionType arrayString="dynamic attack save")}}
  <div class="chat-save-wrapper wrapper">
    {{PARTIAL "Save Details"}}
  </div>
  {{/if}}
  {{#if (arrayIncludes actionType arrayString="contest check")}}
  <div class="check-skill-check-wrapper wrapper">
    {{PARTIAL "Check Details"}}
  </div>
  {{/if}}
  {{#if (arrayIncludes actionType arrayString="dynamic attack save other check contest")}}
  <div class="chat-roll-wrapper wrapper">
    {{PARTIAL "Dice Roll"}}
  </div>
  {{/if}}
</div>