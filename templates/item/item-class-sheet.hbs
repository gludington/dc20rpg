<form class="{{cssClass}} flexcol" autocomplete="off">
  {{!-- Sheet Header --}}
  <header class="item-sheet-header">
    <div class="left-header">
      <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    </div>
    <div class="right-header">
      {{PARTIAL "Item Name"}}

    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="details">Class Details</a>
    <a class="item" data-tab="scaling">Scaling Values</a>
    <a class="item" data-tab="advancements">Advancements</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="item-sheet-body">

    {{!-- Description Tab --}}
    <div class="tab description-tab" data-group="primary" data-tab="description">
      <div class="description" style="grid-template-columns: auto">
        {{PARTIAL "Text Area"}}
      </div>
    </div>

    <div class="tab details-tab" data-group="primary" data-tab="details">
      <div class="title-separator">
        <label>Masteries</label>
      </div>
      <div class="grid grid-4col grid-gap-5">
        {{#each system.masteries as |mastery key|}}
        <div class="activable-box activable {{#if mastery}} active {{/if}}" data-path="system.masteries.{{key}}">
          {{labelFromKey key @root.config.masteries}}
        </div>
        {{/each}}
      </div>

    </div>

    {{PARTIAL "Scaling"}}
    {{PARTIAL "Advancements"}}

  </section>
</form>
