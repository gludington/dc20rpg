<form class="{{cssClass}} flexcol" autocomplete="off">
  {{!-- Sheet Header --}}
  <header class="item-sheet-header">
    <div class="left-header">
      <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    </div>
    <div class="right-header">
      {{PARTIAL "Item Name"}}
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="details">Background Details</a>
    <a class="item" data-tab="advancements">Advancements</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="item-sheet-body">

    {{!-- Description Tab --}}
    <div class="tab description-tab" data-group="primary" data-tab="description">
      <div class="description" style="grid-template-columns: auto">
        {{PARTIAL "Text Area"}}
      </div>
    </div>

    {{!-- Ancestry Details Tab --}}
    <div class="tab details-tab" data-group="primary" data-tab="details">
      <div class="details config-container">
        <div class="title-separator details-header">
          <label>Starting Masteries</label>
        </div>
        <div class="config-row">
          <label>Skill Points </label>
          <input type="text" name="system.skillPoints" value="{{system.skillPoints}}" data-dtype="Number" placeholder="0">
        </div>
        <div class="config-row">
          <label>Trade Points </label>
          <input type="text" name="system.tradePoints" value="{{system.tradePoints}}" data-dtype="Number" placeholder="0">
        </div>
        <div class="config-row">
          <label>Language Points </label>
          <input type="text" name="system.langPoints" value="{{system.langPoints}}" data-dtype="Number" placeholder="0">
        </div>
      </div>
    </div>
    
    {{PARTIAL "Advancements"}}
  </section>
</form>
