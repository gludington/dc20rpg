<form class="{{cssClass}} flexcol" autocomplete="off">
  {{!-- Sheet Header --}}
  <header class="item-sheet-header">
    {{> "systems/dc20rpg/templates/item/parts/item-header.hbs" item-type="consumable"}}
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="configuration">Configuration</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="item-sheet-body">

    {{!-- Description Tab --}}
    <div class="tab description-tab" data-group="primary" data-tab="description">
      {{> "systems/dc20rpg/templates/item/parts/item-description.hbs"}}
    </div>

    {{!-- Configuration Tab --}}
    <div class="tab configuration-tab" data-group="primary" data-tab="configuration">
      {{!-- Weapon Details --}}
      <div class="details">
        <div class="title-separator details-header">
          <label>Details</label>
          <div class="identified activable {{#if system.statuses.identified}} active {{/if}}"
            data-path="system.statuses.identified"
          >Identified
          </div>
        </div>
        <div class="config-row">
          <label>Consumable Type </label>
          <select name="system.consumableType">
            {{selectOptions @root.config.consumableTypes selected=system.consumableType blank=""}}
          </select>
        </div>
        <div class="config-row">
          <label>Rarity </label>
          <select name="system.rarity">
            {{selectOptions @root.config.rarities selected=system.rarity blank=""}}
          </select>
        </div>
        <div class="config-row consume">
          <label>Consume on use</label>
          <div class="right-part-row">
            {{#if system.consume}}
              <a class="fa-solid fa-square-check fa-lg activable" data-path="system.consume"></a>
            {{else}}
              <a class="fa-regular fa-square fa-lg activable" data-path="system.consume"></a>
            {{/if}}
          </div>
        </div>
        <div class="config-row properties">
          <label>Attunement </label>
          <div class="right-part-row">
            {{#if system.properties.attunement.active}}
            <div class="property activable active inline-property"
              data-path="system.properties.attunement.active"
            >Required
            </div>
            {{else}}
            <div class="property activable inline-property"
              data-path="system.properties.attunement.active"
            >Not Required
            </div>
            {{/if}}
          </div>
        </div>
        {{#if system.properties.damageReduction.active}}
        <div class="config-row">
          <label>Damage Reduction </label>
          <input type="text" name="system.properties.damageReduction.value" value="{{system.properties.damageReduction.value}}" data-dtype="Number" placeholder="-">
        </div>
        {{/if}}
        {{#if system.properties.requirement.active}}
        <div class="config-row">
          <label>Requirement </label>
          <div class="right-part-row">
            <input class="margin-right-3" type="text" name="system.properties.requirement.number" value="{{system.properties.requirement.number}}" data-dtype="Number" placeholder="-">
            <select name="system.properties.requirement.attribute">
              {{selectOptions @root.config.attributes selected=system.properties.requirement.attribute blank=""}}
            </select>
          </div>
        </div>
        {{/if}}
      </div>
      {{!-- Item Action --}}
      {{> "systems/dc20rpg/templates/item/parts/item-action.hbs"}}
    </div>
  </section>
</form>
