<div class="item-img">
  <img src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
  {{#if usageCosts.resources.counter}}
  <div class="cost-wrapper">
    <div class="item-cost">
      {{{cost-printer usageCosts.resources.costs usageCosts.resources.counter false}}}
    </div>
  </div>
  {{/if}}
</div>

<div class="header-content">
  <div class="item-details">
    <input class="item-name" name="name" type="text" value="{{item.name}}" title="{{localize 'dc20rpg.item.sheet.name'}}" placeholder="{{localize 'dc20rpg.item.sheet.name'}}"/>
    {{{item-label sheetData}}}
  </div>
  <div class="item-roll">
    {{{item-roll-details item sheetData}}}
  </div>
  <div class="item-properties margin-top-3">
    {{{item-properties item}}}
  </div>
</div>