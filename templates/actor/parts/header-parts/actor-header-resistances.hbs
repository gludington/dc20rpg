    {{else}}
    <div class="holy" title="{{localize 'DC20RPG.HolyResistance'}}">
      <span>{{system.resistances.holy.value}}</span>
    </div>
    {{/if}}
    {{#if system.resistances.lightning.immune}}
    <div class="lightning" title="Lightning Immune">
      <span>Im</span>
    </div>
    {{else}}
    <div class="lightning" title="{{localize 'DC20RPG.LightningResistance'}}">
      <span>{{system.resistances.lightning.value}}</span>
    </div>
    {{/if}}
    {{#if system.resistances.poison.immune}}
    <div class="poison" title="Poison Immune">
      <span>Im</span>
    </div>
    {{else}}
    <div class="poison" title="{{localize 'DC20RPG.PoisonResistance'}}">
      <span>{{system.resistances.poison.value}}</span>
    </div>
