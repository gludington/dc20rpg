    <div class="thunder" title="Thunder Immune">
      <span>Im</span>
    </div>
    {{else}}
    <div class="thunder" title="{{localize 'DC20RPG.ThunderResistance'}}">
      <span>{{system.resistances.thunder.value}}</span>
    </div>
    {{/if}}
    {{#if system.resistances.unholy.immune}}
    <div class="unholy" title="Unholy Immune">
      <span>Im</span>
    </div>
    {{else}}
    <div class="unholy" title="{{localize 'DC20RPG.UnholyResistance'}}">
      <span>{{system.resistances.unholy.value}}</span>
    </div>
    {{/if}}
  </div>
  <div class="resistance grid grid-3col">
    <div class="piercing">
      {{#if system.resistances.piercing.immune}}
      <div class="column" title="Piercing Immune">
        <span>Im</span>
      </div>
      {{else}}
      <div class="column" title="{{localize 'DC20RPG.PiercingResistance'}}">
        <span>{{system.resistances.piercing.value}}</span>
      </div>
      {{/if}}
      <div class="column ench-column">
        <div class="enchanting">
        {{#if system.resistances.piercing.nonSilvered}}
        <div class="fa-solid fa-weight-hanging fa-2xs" title="From Non-silvered Weapons"></div>
        {{else}}
        <div class="fa-regular fa-weight-hanging fa-2xs" title="From Non-silvered Weapons"></div>
        {{/if}}
        
        {{#if system.resistances.piercing.nonMagical}}
        <div class="fa-solid fa-wand-magic-sparkles fa-2xs" title="From Non-magical Weapons"></div>
        {{else}}
        <div class="fa-regular fa-wand-magic-sparkles fa-2xs" title="From Non-magical Weapons"></div>
        {{/if}}
        </div>
