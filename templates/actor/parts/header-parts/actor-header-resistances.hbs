<div class="resistances grid-span-7">
  <div class="sector-header">
    <label>{{localize 'DC20RPG.Resistances'}}</label>
    <a class="config-resistances fa-solid fa-gear"></a>
  </div>
  <div class="resistance grid grid-5col">
    {{#if system.resistances.acid.immune}}
    <div class="acid" title="Acid Immune">
      <span>Im</span>
    </div>
    {{else}}
    <div class="acid" title="{{localize 'DC20RPG.AcidResistance'}}">
      <span>{{system.resistances.acid.value}}</span>
    </div>
    {{/if}}
    {{#if system.resistances.cold.immune}}
    <div class="cold" title="Cold Immune">
      <span>Im</span>
    </div>
    {{else}}
