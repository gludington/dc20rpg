      type="text" value="{{system.defences.mental.value}}" name="system.defences.mental.normal" data-dtype="Number" title="Mental Defence"/>
  </div>
  <div class="small-icon-container grid grid-3col">
    <div class="small-icon heavy" title="Heavy Hit">
      <span>{{system.defences.mental.heavy}}</span>
    </div>
    <div class="small-icon brutal" title="Brutal Hit">
      <span>{{system.defences.mental.brutal}}</span>
    </div>
    <div class="config">
      <a class="config-md fa-solid fa-gear" title="Configure Defence"></a>
    </div>
  </div>
</div>