<div class="row-element box-with-icons grid-span-3">
  <div class="sector-header">
    <label>Phisical</label>
  </div>
  <div class="big-icon phisical">
    <input {{#ifCond system.defences.phisical.formulaKey '!==' "flat"}} disabled {{/ifCond}} 
      type="text" value="{{system.defences.phisical.value}}" name="system.defences.phisical.normal" data-dtype="Number" title="Phisical Defence"/>
  </div>
  <div class="small-icon-container grid grid-3col">
    <div class="small-icon heavy" title="Heavy Hit">
      <span>{{system.defences.phisical.heavy}}</span>
    </div>
    <div class="small-icon brutal" title="Brutal Hit">
      <span>{{system.defences.phisical.brutal}}</span>
    </div>
    <div class="config">
      <a class="config-pd fa-solid fa-gear" title="Configure Defence"></a>
    </div>
  </div>
</div>
<div class="row-element box-with-icons grid-span-3">
