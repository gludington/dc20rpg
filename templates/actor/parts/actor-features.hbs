{{!-- Class and Subclass --}}
{{> "systems/dc20rpg/templates/actor/parts/items-parts/actor-items-row-class.hbs"}}

{{!-- Table for each tableName --}}
{{#each features as |tableItems key|}}
<div class="item-list table-name {{key}}" data-table-name="{{key}}">
  {{!-- Header --}}
  <div class="item-header">
    <div class="column reordering-buttons">
      {{#ifCond tableItems.siblings.before '!==' undefined}}
      <a class="reorder fa-solid fa-angle-up" title="Move table up" data-tab="features" data-current="{{key}}" data-swapped="{{tableItems.siblings.before}}"></a>
      {{/ifCond}}
      {{#ifCond tableItems.siblings.after '!==' undefined}}
      <a class="reorder fa-solid fa-angle-down" title="Move table down" data-tab="features" data-current="{{key}}" data-swapped="{{tableItems.siblings.after}}"></a>
      {{/ifCond}}
    </div>
    <div class="column column-name">{{key}}</div>
    <div class="column column-cost">Usage Cost</div>
    <div class="column column-charges">Charges</div>
    <div class="column column-config">
      <a class="item-create" title="Create item" data-tab="features"><i class="fas fa-plus"></i> Add item</a>
    </div>
  </div>
  {{!-- Row --}}
  {{#each tableItems.items as |item key|}}
  <div class="expandable-row">
    <div class="item item-row" data-item-id="{{item._id}}">
      {{> "systems/dc20rpg/templates/actor/parts/items-parts/actor-items-row-details.hbs"}}
      {{> "systems/dc20rpg/templates/actor/parts/items-parts/actor-items-row-usage.hbs"}}
      {{> "systems/dc20rpg/templates/actor/parts/items-parts/actor-items-row-charges.hbs"}}
      <div class="row-column row-config">
        {{> "systems/dc20rpg/templates/actor/parts/items-parts/actor-items-row-config.hbs"}}
      </div>
    </div>
    {{> "systems/dc20rpg/templates/actor/parts/items-parts/actor-items-row-roll.hbs"}}
  </div>
  {{/each}}
</div>
{{/each}}