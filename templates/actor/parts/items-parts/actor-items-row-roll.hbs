{{#if flags.rollMenu.showMenu}}
{{!-- Roll Enhacements --}}
{{#if system.enhancements}} {{#each system.enhancements as |enhancement key|}}
<div class="row-enh-menu">
  <div class="toogle">
    <a class="toogle-item-enhancement" data-item-id="{{@root._id}}" data-path="system.enhancements.{{key}}.number"><span>{{enhancement.number}}</span></a>
  </div>
  <div class="enh-name">
    <span>{{enhancement.name}}</span>
  </div>
  <div class="enh-cost">
    {{#ifCond enhancement.resources.actionPoint '>=' 0}}
    <div class="cost ap" title="Action Points">
      {{{costPrinter enhancement.resources.actionPoint "fa-solid fa-dice-d6" 2 true "fa-light fa-dice-d6"}}}
    </div>
    {{/ifCond}}
    {{#ifCond enhancement.resources.stamina '>' 0}}
    <div class="cost sp" title="Stamina">
      {{{costPrinter enhancement.resources.stamina "fa-solid fa-hand-fist" 2}}}
    </div>
    {{/ifCond}}
    {{#ifCond enhancement.resources.mana '>' 0}}
    <div class="cost mp" title="Mana">
      {{{costPrinter enhancement.resources.mana "fa-solid fa-star" 2}}}
    </div>
    {{/ifCond}}
    {{#ifCond enhancement.resources.health '>' 0}}
    <div class="cost hp" title="Health">
      {{{costPrinter enhancement.resources.health "fa-solid fa-heart" 2}}}
    </div>
    {{/ifCond}}
    {{!-- {{#each enhancement.resources as |resource key|}}
      {{#ifCond resource.cost '>' 0}}
      <div class="cost" title="{{resource.name}}">
        {{{costPrinterIcons resource "" 2}}}
      </div>
      {{/ifCond}}
    {{/each}} --}}
  </div>
</div>
{{/each}} {{/if}}

{{!-- Roll Menu Details --}}
<div class="row-roll-menu">
  <div class="item-roll-buttons">
    <a class="roll-item fa-solid fa-dice-d20 fa-lg" title="Configured Item Roll" data-item-id="{{_id}}" data-configured-roll="true"></a>     
  </div>
  <div class="toogle">
    <span>Adv: </span>
    {{#if flags.rollMenu.adv}}
    <a class="item-activable fa-solid fa-circle" title="Roll with Advantage" data-item-id="{{_id}}" data-path="flags.rollMenu.adv"></a>
    <input class="change-item-numeric-value" type="text" value="{{flags.rollMenu.advLevel}}" data-item-id="{{_id}}" data-path="flags.rollMenu.advLevel">
    {{else}}
    <a class="item-activable fa-regular fa-circle" title="Roll with Advantage" data-item-id="{{_id}}" data-path="flags.rollMenu.adv"></a>
    {{/if}}
  </div>
  <div class="toogle">
    <span>Dis: </span>
    {{#if flags.rollMenu.dis}}
    <a class="item-activable fa-solid fa-circle" title="Roll with Disadvantage" data-item-id="{{_id}}" data-path="flags.rollMenu.dis"></a>
    <input class="change-item-numeric-value" type="text" value="{{flags.rollMenu.disLevel}}" data-item-id="{{_id}}" data-path="flags.rollMenu.disLevel">
    {{else}}
    <a class="item-activable fa-regular fa-circle" title="Roll with Disadvantage" data-item-id="{{_id}}" data-path="flags.rollMenu.dis"></a>
    {{/if}}
  </div>
  <div class="toogle">
    <span>Free: </span>
    {{#if flags.rollMenu.freeRoll}}
    <a class="item-activable fa-solid fa-circle" title="Roll without usage costs and charges" data-item-id="{{_id}}" data-path="flags.rollMenu.freeRoll"></a>
    {{else}}
    <a class="item-activable fa-regular fa-circle" title="Roll without usage costs and charges" data-item-id="{{_id}}" data-path="flags.rollMenu.freeRoll"></a>
    {{/if}}
  </div>
  <div class="toogle">
    <span>Versatile: </span>
    {{#if flags.rollMenu.versatileRoll}}
    <a class="item-activable fa-solid fa-circle" title="Roll with versatile roll formulas" data-item-id="{{_id}}" data-path="flags.rollMenu.versatileRoll"></a>
    {{else}}
    <a class="item-activable fa-regular fa-circle" title="Roll with versatile roll formulas" data-item-id="{{_id}}" data-path="flags.rollMenu.versatileRoll"></a>
    {{/if}}
  </div>
</div>
{{/if}}