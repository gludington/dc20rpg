<div class="row-column row-usage">
  {{#ifCond usageCosts.resources.costs.actionPoint.cost '>=' 0}}
  <div class="cost ap" title="Action Points">
    {{{costPrinter usageCosts.resources.costs.actionPoint.cost "fa-solid fa-dice-d6" usageCosts.resources.counter true "fa-light fa-dice-d6"}}}
  </div>
  {{/ifCond}}
  {{#ifCond usageCosts.resources.costs.stamina.cost '>' 0}}
  <div class="cost sp" title="Stamina">
    {{{costPrinter usageCosts.resources.costs.stamina.cost "fa-solid fa-hand-fist" usageCosts.resources.counter}}}
  </div>
  {{/ifCond}}
  {{#ifCond usageCosts.resources.costs.mana.cost '>' 0}}
  <div class="cost mp" title="Mana">
    {{{costPrinter usageCosts.resources.costs.mana.cost "fa-solid fa-star" usageCosts.resources.counter}}}
  </div>
  {{/ifCond}}
  {{#ifCond usageCosts.resources.costs.health.cost '>' 0}}
  <div class="cost hp" title="Health">
    {{{costPrinter usageCosts.resources.costs.health.cost "fa-solid fa-heart" usageCosts.resources.counter}}}
  </div>
  {{/ifCond}}
  {{#each usageCosts.resources.costs.custom as |resource key|}}
    {{#ifCond resource.cost '>' 0}}
    <div class="cost" title="{{resource.name}}">
      {{{costPrinterIcons resource.cost resource.imgSrc @root.usageCosts.resources.counter}}}
    </div>
    {{/ifCond}}
  {{/each}}
</div>