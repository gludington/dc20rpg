<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">
  {{!-- Sheet Header --}}
  <header class="sheet-header">
    {{PARTIAL "Actor Header"}}
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="core">{{localize 'DC20RPG.NavigationCore'}}</a>
    <a class="item" data-tab="inventory">{{localize 'DC20RPG.NavigationInventory'}}</a>
    <a class="item" data-tab="features">{{localize 'DC20RPG.NavigationFeatures'}}</a>
    <a class="item" data-tab="techniques">{{localize 'DC20RPG.NavigationTechniques'}}</a>
    <a class="item" data-tab="spells">{{localize 'DC20RPG.NavigationSpells'}}</a>
    <a class="item" data-tab="effects">{{localize 'DC20RPG.NavigationEffects'}}</a>
    <a class="item" data-tab="journal">{{localize 'DC20RPG.NavigationJournal'}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    {{PARTIAL "Actor Resources"}}
    {{PARTIAL "Core"}}
    {{PARTIAL "Inventory"}}
    {{PARTIAL "Features"}}
    {{PARTIAL "Techniques"}}
    {{PARTIAL "Spells"}}

    {{!-- Effects Tab --}}
    <div class="tab effects-tab" data-group="primary" data-tab="effects">
      {{PARTIAL "Effects Tables"}}
    </div>

    {{!-- Journal Tab --}}
    <div class="tab journal-tab" data-group="primary" data-tab="journal">
      {{editor enriched.journal target="system.journal" button=true editable=editable}}
    </div>

    {{PARTIAL "Actor Item Tooltip"}}
  </section>
</form>

