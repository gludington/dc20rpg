<form class="{{cssClass}} {{actor.type}}  actor_v2" autocomplete="off">
  <div class="char-sheet-details {{#if expandedSidebar}}expand{{/if}}">
    <a class="sidetab-button {{#if expandedSidebar}}fa-square-caret-right{{else}}fa-square-caret-left{{/if}} fa-duotone fa-swap-opacity fa-2x"></a>
    {{PARTIAL "Character Sidebar"}}
  </div>
  
  <header class="char-sheet-header">
    {{PARTIAL "Character Header"}}
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="char-sheet-navigation tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="core" title="{{localize 'dc20rpg.sheet.nav.core'}}"><i class="fa-solid fa-lg fa-list-ul"></i></a>
    <a class="item" data-tab="inventory" title="{{localize 'dc20rpg.sheet.nav.inventory'}}"><i class="fa-solid fa-lg fa-box"></i></a>
    <a class="item" data-tab="features" title="{{localize 'dc20rpg.sheet.nav.features'}}"><i class="fa-solid fa-lg fa-book"></i></a>
    <a class="item" data-tab="techniques" title="{{localize 'dc20rpg.sheet.nav.techniques'}}"><i class="fa-solid fa-lg fa-gavel"></i></a>
    <a class="item" data-tab="spells" title="{{localize 'dc20rpg.sheet.nav.spells'}}"><i class="fa-solid fa-lg fa-hat-wizard"></i></a>
    <a class="item" data-tab="effects" title="{{localize 'dc20rpg.sheet.nav.effects'}}"><i class="fa-solid fa-lg fa-bolt"></i></a>
    <a class="item" data-tab="journal" title="{{localize 'dc20rpg.sheet.nav.journal'}}"><i class="fa-solid fa-lg fa-feather"></i></a>
  </nav>

  <section class="char-sheet-body">
    <div class="tab core-tab" data-group="primary" data-tab="core">
      <div class="first-row">
        {{!-- Roll Menu --}}
        <div class="border-box content-box roll-menu-box">
          <div class="box-inner no-padding">
            <div class="box-header">
              <span>{{localize 'dc20rpg.sheet.rollMenu.title'}}</span>
            </div>
            <div class="box-content roll-menu">
              
              {{!-- First Column --}}
              <div class="first-column column">
                <div class="sub-header">
                  <span>{{localize 'dc20rpg.sheet.rollMenu.rollLevel'}}</span>
                </div>
                <div class="roll-level">
                  <div class="toggle" title="{{localize 'dc20rpg.sheet.rollMenu.adv'}}">
                    <span>Adv: </span>
                    <a class="toggle-actor-numeric adv" data-path="system.rollMenu.adv">{{system.rollMenu.adv}}</a>
                  </div>
                  <div class="toggle" title="{{localize 'dc20rpg.sheet.rollMenu.dis'}}">
                    <span>Dis: </span>
                    <a class="toggle-actor-numeric dis" data-path="system.rollMenu.dis">{{system.rollMenu.dis}}</a>
                  </div>
                </div>
              </div>

              {{!-- Middle Column --}}
              <div class="middle-column column">
                {{!-- Initiative toggle --}}
                <a class="initiative-toggle activable {{#if system.rollMenu.initiative}}active{{/if}}" data-path="system.rollMenu.initiative" title={{#if system.rollMenu.initiative}}"{{localize 'dc20rpg.sheet.rollMenu.initiative.active'}}"{{else}}"{{localize 'dc20rpg.sheet.rollMenu.initiative.inactive'}}"{{/if}}><span>{{localize 'dc20rpg.sheet.rollMenu.initiative.title'}}</span></a>
                <div class="special-rolls">
                  {{!-- Flat d20 --}}
                  <div class="icon-wrapper" title="{{localize 'dc20rpg.sheet.rollMenu.flat'}}"><a class="rollable fa-solid fa-dice-d20 fa-2x icon" data-roll="d20" data-label="{{localize 'dc20rpg.sheet.rollMenu.flat'}}" data-type=""></a></div>
                  {{!-- Martial Check --}}
                  <div class="icon-wrapper" title="{{localize 'dc20rpg.sheet.rollMenu.martial'}}"><a class="rollable fa-solid fa-hand-fist fa-2x icon" data-roll="d20 + @special.marCheck" data-label="{{localize 'dc20rpg.sheet.rollMenu.martial'}}" data-type=""></a></div>
                  {{!-- Physical Save --}}
                  <div class="icon-wrapper" title="{{localize 'dc20rpg.sheet.rollMenu.phySave'}}"><a class="rollable fa-solid fa-shield-heart fa-2x icon" data-roll="d20 + @special.phySave" data-label="{{localize 'dc20rpg.sheet.rollMenu.phySave'}}" data-type=""></a></div>
                  {{!-- Mental Save --}}
                  <div class="icon-wrapper" title="{{localize 'dc20rpg.sheet.rollMenu.menSave'}}"><a class="rollable fa-solid fa-brain fa-2x icon" data-roll="d20 + @special.menSave" data-label="{{localize 'dc20rpg.sheet.rollMenu.menSave'}}" data-type=""></a></div>
                </div>
              </div>

              {{!-- Last Column --}}
              <div class="last-column column" title="{{localize 'dc20rpg.sheet.rollMenu.helpDices'}}">
                <div class="sub-header">
                  <span>{{localize 'dc20rpg.sheet.rollMenu.helpDices'}}</span>
                </div>
                <div class="help-dices">
                  {{!-- d8 --}}
                  <a class="toggle-actor-numeric diamond" data-path="system.rollMenu.d8" title="{{localize 'dc20rpg.sheet.rollMenu.d8'}}">
                    <span class="fa-solid fa-diamond dice"></span>
                    <div class="value"><span>{{system.rollMenu.d8}}</span></div>
                  </a>
                  {{!-- d6 --}}
                  <a class="toggle-actor-numeric square" data-path="system.rollMenu.d6" title="{{localize 'dc20rpg.sheet.rollMenu.d6'}}">
                    <span class="fa-solid fa-square dice"></span>
                    <div class="value"><span>{{system.rollMenu.d6}}</span></div>
                  </a>
                  {{!-- d4 --}}
                  <a class="toggle-actor-numeric triangle" data-path="system.rollMenu.d4" title="{{localize 'dc20rpg.sheet.rollMenu.d4'}}">
                    <span class="fa-solid fa-play fa-rotate-270 dice"></span>
                    <div class="value"><span>{{system.rollMenu.d4}}</span></div>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        {{!-- Check Roll / Save Dc --}}
        <div class="border-box content-box check-save-box">
          <div class="box-inner no-padding">
            <div class="box-header">
              <span>{{localize 'dc20rpg.sheet.checkSave.title'}}</span>
            </div>
            <div class="box-content check-save">
              {{!-- Check Modifier --}}
              <div class="check-column column">
                <div class="sub-header">
                  <span>{{localize 'dc20rpg.sheet.checkSave.checkTitle'}}</span>
                </div>
                <div class="check-buttons">
                  <div class="roll-button rollable" data-roll="d20+@attackMod.value.martial" title="{{localize 'dc20rpg.sheet.checkSave.attackCheck'}}" data-label="{{localize 'dc20rpg.sheet.checkSave.attackCheck'}}" data-type="attackCheck">
                    <span class="original">{{localize 'dc20rpg.sheet.checkSave.attackCheck'}}</span>
                    <span class="hovered bigger">{{numberFormat system.attackMod.value.martial decimals=0 sign=true}}</span>
                  </div>
                  <div class="roll-button rollable" data-roll="d20+@attackMod.value.spell" title="{{localize 'dc20rpg.sheet.checkSave.spellCheck'}}" data-label="{{localize 'dc20rpg.sheet.checkSave.spellCheck'}}" data-type="spellCheck">
                    <span class="original">{{localize 'dc20rpg.sheet.checkSave.spellCheck'}}</span>
                    <span class="hovered bigger">{{numberFormat system.attackMod.value.spell decimals=0 sign=true}}</span>
                  </div>
                </div>
              </div>

              {{!-- Save DC --}}
              <div class="save-column column">
                <div class="sub-header">
                  <span>{{localize 'dc20rpg.sheet.checkSave.saveTitle'}}</span>
                </div>
                <div class="saves">
                  <div class="martial save" data-roll="d20+@attackMod.value.martial" title="{{localize 'dc20rpg.sheet.checkSave.martialSave'}}" data-label="{{localize 'dc20rpg.sheet.checkSave.martialSave'}}" data-type="attackCheck">
                    <span class="title">{{localize 'dc20rpg.sheet.checkSave.martialSaveLabel'}}:</span>
                    <span class="value">{{numberFormat system.saveDC.value.martial decimals=0 sign=false}}</span>
                  </div>
                  <div class="spell save" data-roll="d20+@attackMod.value.spell" title="{{localize 'dc20rpg.sheet.checkSave.spellSave'}}" data-label="{{localize 'dc20rpg.sheet.checkSave.spellSave'}}" data-type="spellCheck">
                    <span class="title">{{localize 'dc20rpg.sheet.checkSave.spellSaveLabel'}}:</span>
                    <span class="value">{{numberFormat system.saveDC.value.spell decimals=0 sign=false}}</span>
                  </div>
                </div>
              </div>
              
          </div>
          </div>
        </div>
      </div>

      <div class="second-row grid grid-8col">
        <div class="border-box content-box no-small-boxes skills grid-span-3">
          <div class="box-inner no-padding">
            {{PARTIAL "Skills"}}
          </div>
        </div>

        {{!-- Damage Reduction --}}
        <div class="border-box content-box no-small-boxes dmg-reduction grid-span-3">
          <div class="box-inner no-padding">

          </div>
        </div>

        {{!-- Condition Immunity --}}
        <div class="border-box content-box no-small-boxes conditions grid-span-2">
          <div class="box-inner no-padding">

          </div>
        </div>
      </div>
    </div>

    <div class="tab inventory-tab" data-group="primary" data-tab="inventory">
      inventory
    </div>
        
    <div class="tab features-tab" data-group="primary" data-tab="features">
      features
    </div>
    
    <div class="tab techniques-tab" data-group="primary" data-tab="techniques">
      techniques
    </div>
    
    <div class="tab spells-tab" data-group="primary" data-tab="spells">
      spells
    </div>
    
    <div class="tab effects-tab" data-group="primary" data-tab="effects">
      effects
    </div>

    <div class="tab journal-tab" data-group="primary" data-tab="journal">
      journal
    </div>
  </section>
</form>